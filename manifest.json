{
  "manifest_version": 2,

  "name": "Xero Dict",
  "description": "A meaningful Dictionary",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Meaningful Dictionary"
  },
  "permissions": [
    "activeTab",
    "http://www.dictionaryapi.com/api/v1/references/learners/xml/*"
  ],
  "options_page": "options.html"
}
